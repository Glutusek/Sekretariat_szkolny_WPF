<Window x:Class="Sekretariat_szkolny_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:self="clr-namespace:Sekretariat_szkolny_WPF"
        mc:Ignorable="d"
        Title="Sekretariat szkolny"
        Width="1220"
        Height="750"
        WindowStartupLocation="CenterScreen"
        FontSize="15">
    <Window.CommandBindings>
        <CommandBinding Command="self:CustomShortcuts.OpenStudents" CanExecute="Command_CanExecute" Executed="OpenStudentsCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.OpenTeachers" CanExecute="Command_CanExecute" Executed="OpenTeachersCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.OpenStaffMembers" CanExecute="Command_CanExecute" Executed="OpenStaffMembersCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.OpenShortcuts" CanExecute="Command_CanExecute" Executed="OpenShortcutsCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.OpenAddStudent" CanExecute="Command_CanExecute" Executed="OpenAddStudentCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.OpenAddTeacher" CanExecute="Command_CanExecute" Executed="OpenAddTeacherCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.OpenAddStaffMember" CanExecute="Command_CanExecute" Executed="OpenAddStaffMemberCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.LoadFromFileToDB" CanExecute="Command_CanExecute" Executed="LoadFromFileToDBCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.ImportImage" CanExecute="Command_CanExecute" Executed="ImportImageCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.GenerateWindowReport" CanExecute="Command_CanExecute" Executed="GenerateWindowReportCommand_Executed"/>
        <CommandBinding Command="self:CustomShortcuts.GenerateAllDBReport" CanExecute="Command_CanExecute" Executed="GenerateAllDBReportCommand_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        
        <!--#region Menu-->
        
        <Menu>
            <MenuItem Header="_Wyświetlanie">
                <MenuItem Header="_Uczniowie" Tag="U" Command="self:CustomShortcuts.OpenStudents"/>
                <MenuItem Header="_Nauczyciele" Tag="N" Command="self:CustomShortcuts.OpenTeachers"/>
                <MenuItem Header="_Pracownicy obsługi" Tag="P" Command="self:CustomShortcuts.OpenStaffMembers"/>
                <MenuItem Header="_Skróty klawiszowe" Tag="S" Command="self:CustomShortcuts.OpenShortcuts"/>
            </MenuItem>
            <MenuItem Header="_Dodawanie">
                <MenuItem Header="Dodaj u_cznia" Tag="U" Command="self:CustomShortcuts.OpenAddStudent"/>
                <MenuItem Header="Dodaj nac_zyciela" Tag="N" Command="self:CustomShortcuts.OpenAddTeacher"/>
                <MenuItem Header="Dodaj p_racownika obsługi" Tag="P" Command="self:CustomShortcuts.OpenAddStaffMember"/>
            </MenuItem>
            <MenuItem Header="_Operacje">
                <MenuItem Header="_Wczytaj dane z pliku" Command="self:CustomShortcuts.LoadFromFileToDB"/>
                <MenuItem Header="Dodaj _zdjęcie do bazy" Command="self:CustomShortcuts.ImportImage"/>
                <MenuItem Header="Generuj _raport tego okna" Command="self:CustomShortcuts.GenerateWindowReport"/>
                <MenuItem Header="_Generuj raport całej bazy" Command="self:CustomShortcuts.GenerateAllDBReport"/>
            </MenuItem>
        </Menu>
        
        <!--#endregion-->
        
        <!--#region Toolbar-->

        <ToolBarTray Grid.Row="1" ToolBarTray.IsLocked="True">
            <ToolBar>
                <Button Name="LoadFromFileButton" Content="Wczytaj z pliku" Click="LoadFromFileToDB_Click"/>
                <Button Name="AddImageButton" Content="Dodaj zdjęcie do bazy" Click="AddImageToDBButton_Click"/>
            </ToolBar>
            <ToolBar>
                <Button Name="GenerateWindowReportButton"  Content="Generuj raport tego okna" Click="GenerateWindowReportButton_Click"/>
                <Button Name="GenerateAllDBReportButton"  Content="Generuj raport całej bazy" Click="GenerateAllDBReportButton_Click"/>
            </ToolBar>
        </ToolBarTray>
        
        <!--#endregion-->
        
        <!--#region Sekretariat-->
        
